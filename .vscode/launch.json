{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "cppdbg",
   
            "name": "Attach to xemu GDB Server",
            "request": "attach",
            "program": "${workspaceFolder}/build/rom.elf",
            "MIMode": "gdb",
            "miDebuggerServerAddress": "172.25.192.1:1234",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Set custom gdbinit file",
                    "text": "source ${workspaceFolder}/.gdbinit",
                    "ignoreFailures": false
                }
            ],
            "useExtendedRemote": true,
        }
    ]
}
